{
  "name": "@omc/server",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "dev": "nest start --watch",
    "start": "nest start",
    "debug": "nest start --debug --watch",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:open": "peeky open",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --runInBand",
    "mikro-orm": "mikro-orm"
  },
  "dependencies": {
    "@mikro-orm/cli": "5.0.0-dev.608",
    "@mikro-orm/core": "5.0.0-dev.608",
    "@mikro-orm/knex": "5.0.0-dev.608",
    "@mikro-orm/migrations": "5.0.0-dev.608",
    "@mikro-orm/nestjs": "4.3.1",
    "@mikro-orm/postgresql": "5.0.0-dev.608",
    "@mikro-orm/sql-highlighter": "1.0.1",
    "@nestjs/common": "8.0.6",
    "@nestjs/core": "8.0.6",
    "@nestjs/jwt": "8.0.0",
    "@nestjs/passport": "8.0.1",
    "@nestjs/platform-express": "8.0.6",
    "@nestjs/schedule": "1.0.1",
    "accesscontrol": "2.2.1",
    "bcrypt": "5.0.1",
    "cache-manager": "3.4.4",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "dotenv": "10.0.0",
    "form-data": "4.0.0",
    "joi": "17.4.2",
    "lodash": "4.17.21",
    "passport": "0.4.1",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rrule": "2.6.8",
    "rxjs": "7.3.0",
    "systeminformation": "5.8.7",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "8.1.1",
    "@nestjs/schematics": "8.0.3",
    "@nestjs/testing": "8.0.6",
    "@omc/shared": "1.0.0",
    "@types/bcrypt": "5.0.0",
    "@types/cache-manager": "3.4.2",
    "@types/express": "4.17.13",
    "@types/jest": "27.0.1",
    "@types/jsonwebtoken": "8.5.5",
    "@types/lodash": "4.14.172",
    "@types/multer": "1.4.7",
    "@types/node": "16.7.11",
    "@types/passport-jwt": "3.0.6",
    "@types/passport-local": "1.0.34",
    "@types/rimraf": "3.0.2",
    "@types/supertest": "2.0.11",
    "@types/uuid": "8.3.1",
    "@typescript-eslint/eslint-plugin": "4.31.0",
    "@typescript-eslint/parser": "4.31.0",
    "date-fns": "2.23.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.1.0",
    "prettier": "2.3.2",
    "supertest": "6.1.6",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "typescript": "4.4.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  }
}
