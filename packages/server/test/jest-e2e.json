{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@shared/(.*)$": "<rootDir>/../../packages/shared/src/$1",
    "^@server/(.*)$": "<rootDir>/../../packages/server/src/$1"
  },
  "collectCoverage": true,
  "collectCoverageFrom": [
    "./src/**/*.{js,ts}",
    "!./src/**/*.spec{.js,.ts}",
    "!./src/**/*.dto{.js,.ts}",
    "!./src/main.ts"
  ],
  "coverageDirectory": "./coverage",
  "verbose": true
}
